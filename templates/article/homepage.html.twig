{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container">


    <div id="carouselExampleCaptions" class="carousel slide my-3" data-ride="carousel">

        <div class="carousel-inner">
            {% for global in globales  %}

            <div class="carousel-item {% if loop.first %} active {% endif %}">
                <img class="d-block w-100" src="{{asset('images/articles/' ~ global.image) | imagine_filter('card') }}"
                    alt="slide">
                <div class="carousel-caption text-left d-md-block">
                    <a href="{{path('article_show', {'slug' : global.slug })}}" class="align-self-end">
                        <span class="badge">{{global.category.libelle}}</span>
                        <h4 class="card-title">{{global.title}}</h4>
                        <p class="d-sm-none d-md-block">
                            {{global.introduction}}</p>

                    </a>
                </div>
            </div>

            {% endfor %}
        </div>
    </div>


    <section>
        <div class="text-center m-2">
            <h2> Les séries </h2>
        </div>
        <div class="row ">
            <div class="card-deck mx-auto ">

                {% for serie in series %}

                {% include "shared/_card.html.twig" with {'article' : serie} %}

                {% endfor %}


            </div>

        </div>
    </section>


    <section class="m-4 p-3">
        <div class="text-center m-2">
            <h2> Les films </h2>
        </div>
        <div class="row">
            <div class="card-deck">

                {% for film in films %}

                {% include "shared/_card.html.twig" with { 'article' : film} %}

                {% endfor %}

            </div>

        </div>
    </section>



    <section class="m-4 p-3">
        <div class="text-center m-2">
            <h2> Les animés </h2>
        </div>
        <div class="row">
            <div class="card-deck">

                {% for anime in animes %}

                {% include "shared/_card.html.twig" with { 'article' : anime} %}

                {% endfor %}

            </div>

        </div>
    </section>


</div>






</div>

{% endblock %}